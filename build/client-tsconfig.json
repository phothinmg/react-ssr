{
  "$schema": "http://json.schemastore.org/jsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "outDir": "../tsc",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "../dist/client",
    "allowJs": true
  },
  "include": ["../src/client/**/*"]
}
